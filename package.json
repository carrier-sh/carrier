{
  "name": "carrier",
  "version": "2.0.0",
  "description": "Fleet orchestration system for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "carrier": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun --format esm && bun build src/carrier-dispatch.ts --outdir dist --target bun --format esm",
    "dev": "bun src/cli.ts",
    "carrier": "bun src/cli.ts",
    "lint": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:fast": "bun test --bail",
    "test:api": "bun test tests/api.test.ts"
  },
  "keywords": [
    "claude-code",
    "orchestration",
    "workflow",
    "agent",
    "fleet",
    "typescript"
  ],
  "author": "Carrier Team",
  "license": "AGPL-3.0-or-later",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "^1.2.21",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "seed/",
    "templates/"
  ]
}